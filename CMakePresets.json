{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "gcc-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "clang-base",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "gcc-release",
      "inherits": "gcc-base",
      "displayName": "GCC Release",
      "description": "Release build using GCC",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "SANITIZE_MODE": "none"
      }
    },
    {
      "name": "gcc-debug",
      "inherits": "gcc-base",
      "displayName": "GCC Debug",
      "description": "Debug build using GCC",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "SANITIZE_MODE": "none"
      }
    },
    {
      "name": "gcc-asan",
      "inherits": "gcc-base",
      "displayName": "GCC AddressSanitizer",
      "description": "Debug build using GCC with AddressSanitizer",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "SANITIZE_MODE": "address"
      }
    },
    {
      "name": "gcc-coverage",
      "inherits": "gcc-base",
      "displayName": "GCC Code Coverage",
      "description": "Debug build using GCC with code coverage instrumentation",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "SANITIZE_MODE": "none",
        "ENABLE_COVERAGE": "ON"
      }
    },
    {
      "name": "clang-release",
      "inherits": "clang-base",
      "displayName": "Clang Release",
      "description": "Release build using Clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "SANITIZE_MODE": "none"
      }
    },
    {
      "name": "clang-debug",
      "inherits": "clang-base",
      "displayName": "Clang Debug",
      "description": "Debug build using Clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "SANITIZE_MODE": "none"
      }
    },
    {
      "name": "clang-asan",
      "inherits": "clang-base",
      "displayName": "Clang AddressSanitizer",
      "description": "Debug build using Clang with AddressSanitizer",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "SANITIZE_MODE": "address"
      }
    },
    {
      "name": "clang-tsan",
      "inherits": "clang-base",
      "displayName": "Clang ThreadSanitizer",
      "description": "Debug build using Clang with ThreadSanitizer",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "SANITIZE_MODE": "thread"
      }
    },
    {
      "name": "clang-msan",
      "inherits": "clang-base",
      "displayName": "Clang MemorySanitizer",
      "description": "Debug build using Clang with MemorySanitizer (Requires libc++)",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "SANITIZE_MODE": "memory"
      }
    },
    {
      "name": "clang-ubsan",
      "inherits": "clang-base",
      "displayName": "Clang UndefinedBehaviorSanitizer",
      "description": "Debug build using Clang with UndefinedBehaviorSanitizer",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "SANITIZE_MODE": "undefined"
      }
    },
    {
      "name": "clang-coverage",
      "inherits": "clang-base",
      "displayName": "Clang Code Coverage",
      "description": "Debug build using Clang with code coverage instrumentation",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "SANITIZE_MODE": "none",
        "ENABLE_COVERAGE": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "gcc-release",
      "configurePreset": "gcc-release"
    },
    {
      "name": "gcc-debug",
      "configurePreset": "gcc-debug"
    },
    {
      "name": "gcc-asan",
      "configurePreset": "gcc-asan"
    },
    {
      "name": "gcc-coverage",
      "configurePreset": "gcc-coverage"
    },
    {
      "name": "clang-release",
      "configurePreset": "clang-release"
    },
    {
      "name": "clang-debug",
      "configurePreset": "clang-debug"
    },
    {
      "name": "clang-asan",
      "configurePreset": "clang-asan"
    },
    {
      "name": "clang-tsan",
      "configurePreset": "clang-tsan"
    },
    {
      "name": "clang-msan",
      "configurePreset": "clang-msan"
    },
    {
      "name": "clang-ubsan",
      "configurePreset": "clang-ubsan"
    },
    {
      "name": "clang-coverage",
      "configurePreset": "clang-coverage"
    }
  ],
  "testPresets": [
    {
      "name": "gcc-release",
      "configurePreset": "gcc-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "gcc-debug",
      "configurePreset": "gcc-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "gcc-asan",
      "configurePreset": "gcc-asan",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "gcc-coverage",
      "configurePreset": "gcc-coverage",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "clang-release",
      "configurePreset": "clang-release",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "clang-debug",
      "configurePreset": "clang-debug",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "clang-asan",
      "configurePreset": "clang-asan",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "clang-tsan",
      "configurePreset": "clang-tsan",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "clang-msan",
      "configurePreset": "clang-msan",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "clang-ubsan",
      "configurePreset": "clang-ubsan",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "clang-coverage",
      "configurePreset": "clang-coverage",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
